# Примеры environment variables для admin-ui
# Скопируйте этот файл в .env и заполните значения

# Grafana URL для кнопки "Open in Grafana" на странице /metrics
# Обязателен для production! В development используется http://localhost:3001
# Пример: https://grafana.example.com
VITE_GRAFANA_URL=http://localhost:3001

# API Gateway Admin URL (если отличается от window.location)
# VITE_API_URL=http://localhost:8081

# ==========================================
# Keycloak Integration (Story 12.2)
# ==========================================

# Feature flag для переключения между cookie-auth и Keycloak OIDC
# false = используется текущий cookie-based auth (по умолчанию)
# true = используется Keycloak OIDC auth
VITE_USE_KEYCLOAK=false

# Keycloak Server URL (без /realms/...)
# Пример: http://localhost:8180 (dev) или https://keycloak.example.com (prod)
VITE_KEYCLOAK_URL=http://localhost:8180

# Keycloak Realm name
VITE_KEYCLOAK_REALM=api-gateway

# Keycloak Client ID (настроен в Story 12.1)
VITE_KEYCLOAK_CLIENT_ID=gateway-admin-ui
