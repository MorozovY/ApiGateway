# Production Environment Variables
# ВАЖНО: Скопируйте этот файл в .env и заполните реальными значениями!
# cp .env.example .env

# Domain configuration
DOMAIN=ymorozov.ru
ADMIN_SUBDOMAIN=admin
API_SUBDOMAIN=api
GATEWAY_SUBDOMAIN=gateway

# PostgreSQL (ВАЖНО: изменить в production!)
POSTGRES_DB=gateway
POSTGRES_USER=gateway_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_32_CHARS

# Redis (ВАЖНО: изменить в production!)
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_32_CHARS

# Gateway Admin (ВАЖНО: изменить в production!)
ADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_16_CHARS
ADMIN_EMAIL=admin@ymorozov.ru

# JWT Secret (ВАЖНО: изменить в production! Минимум 64 символа)
JWT_SECRET=CHANGE_THIS_TO_CRYPTOGRAPHICALLY_STRONG_SECRET_MIN_64_CHARACTERS_LONG
JWT_EXPIRATION=86400000  # 24 часа в миллисекундах

# Prometheus & Grafana URLs (internal Docker network)
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GATEWAY_CORE_URL=http://gateway-core:8080

# Grafana admin credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# SSL/TLS
LETSENCRYPT_EMAIL=admin@ymorozov.ru

# Backup settings
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=  # опционально для S3 backup
